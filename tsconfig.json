{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "@assets/*": ["assets/*"],
      "@core": ["./src/core"],
      "@navigation/*": ["./src/navigation/*"],
      "@theme": ["./src/ui/theme"],
      "@api/*": ["./src/api/*"],
      "@store": ["./src/store"],
      "@src/*": ["src/*"]
    }
  },
  "rootDirs": ["."],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
