{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@assets/*": ["assets/*"],
      "@theme/*": ["src/ui/theme/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "rootDirs": ["."],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
